{
  "name": "@nest-mods/auth",
  "version": "8.3.0",
  "description": "simple role based auth for nestjs using passport",
  "license": "MIT",
  "repository": "https://github.com/nest-mods/auth",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "author": {
    "name": "Diluka"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "prepare": "npm run clean && npm run build",
    "audit": "npm audit --registry https://registry.npmjs.org",
    "audit:fix": "npm run audit fix"
  },
  "peerDependencies": {
    "@nestjs/common": ">=9",
    "@nestjs/core": ">=9"
  },
  "devDependencies": {
    "@nestjs/apollo": "^10.0.22",
    "@nestjs/common": "^9.0.11",
    "@nestjs/core": "^9.0.11",
    "@nestjs/graphql": "^10.0.22",
    "@nestjs/platform-express": "^9.0.11",
    "@nestjs/testing": "^9.0.11",
    "@types/jest": "^28.1.8",
    "@types/lodash": "^4.14.184",
    "@types/node": "^16",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "apollo-server-express": "^3.10.1",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "ioredis": "^5.2.3",
    "lodash": "^4.17.21",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.4.0",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=16"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "forceExit": true
  }
}
