{
  "name": "@nest-mods/auth",
  "version": "8.1.0",
  "description": "simple role based auth for nestjs using passport",
  "license": "MIT",
  "repository": "https://github.com/nest-mods/auth",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "author": {
    "name": "Diluka"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "prepare": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "@nestjs/common": ">=8",
    "@nestjs/core": ">=8"
  },
  "devDependencies": {
    "@nestjs/common": "^8.2.0",
    "@nestjs/core": "^8.2.0",
    "@nestjs/graphql": "^9.1.1",
    "@nestjs/platform-express": "^8.2.0",
    "@nestjs/testing": "^8.2.0",
    "@types/ioredis": "^4.28.1",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/node": "^10.17.60",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "apollo-server-express": "^3.5.0",
    "graphql": "^15.7.2",
    "graphql-tag": "^2.12.6",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@nestjs/jwt": "^8",
    "@nestjs/passport": "^8.0.1",
    "ioredis": "^4.28.0",
    "lodash": "^4.17.21",
    "passport": "^0.5.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.1",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=10"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
